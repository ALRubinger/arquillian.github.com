!!! 5
%html(lang='en')
  %head
    %meta(charset='utf-8')
    %title= [page.title, site.title].compact.join ' &#183; '
    %meta(name='viewport' content='width=device-width, initial-scale=1.0')
    %meta(name='description'){:content=>page.description ? page.description : site.description}
    - if site.keywords
      %meta(name='keywords'){:content=>site.keywords}
    -#%meta(name='author'){:content=>page.author}
    %link(rel='stylesheet' href='/stylesheets/screen.css')
    - if site.url
      %link(rel='canonical'){:href=>site.url}
    %script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/1.7.1/jquery.min.js')
    %script(src='//twitter.github.com/bootstrap/assets/js/bootstrap-collapse.js')
    - if page.stylesheets
      - page.stylesheets.each do |stylesheet|
        %link(rel='stylesheet' href=stylesheet)
    /[if lt IE 9]
      %script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
    %script(src='/javascripts/prettify.js')
    - if page.javascripts
      - page.javascripts.each do |javascript|
        %script(src=javascript)
    :javascript
      $(function() {
        prettify();
        // stick footer to bottom
        // TODO this needs to get run again when the window size changes
        //$('#main').css('min-height', $(window).height() - $('#footer').outerHeight() - parseInt($('#main').css('margin-top')));
      });
  %body{:class=>page.body_class || nil}
    #banner.navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{:data=>{:toggle=>'collapse', :target=>'.nav-collapse'}}
            - (1..3).each do
              %span.icon-bar
          %a.brand(href='/')
            %span.logo
            = site.title
          .nav-collapse.offset4
            %ul.nav
              %li{:class=>('active' if page.url =~ /^\/invasion\//)}
                %a(href='/invasion/') Invasion!
              %li{:class=>('active' if page.url =~ /^\/features\//)}
                %a(href='/features/') Features
              %li{:class=>('active' if page.url =~ /^\/guides\//)}
                %a(href='/guides/') Guides
              %li{:class=>('active' if page.url =~ /^\/blog\//)}
                %a(href='/blog/') Blog
              %li{:class=>('active' if page.url =~ /^\/community\//)}
                %a(href='/community/') Community
              %li{:class=>('active' if page.url =~ /^\/(code|module)\//)}
                %a(href='/code/') Code
    -##banner
